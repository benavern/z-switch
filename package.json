{
  "name": "z-switch",
  "version": "1.0.0",
  "description": "css switch by ZeZeN",
  "repository": {
    "type": "git",
    "url": "https://github.com/benavern/z-switch.git"
  },
  "homepage": "http://blog.caradeuc.info/z-switch",
  "main": "sass/z-switch.sass",
  "scripts": {
    "sass": "node-sass -i --output-style=compressed --source-map=true sass/ -o css/",
    "sass:watch": "npm run sass -- -w -r",
    "serve": "lite-server",
    "predev": "rm -rf css/ && npm run sass",
    "dev": "npm-run-all --parallel serve sass:watch"
  },
  "author": "Benjamin Caradeuc <bencrdc@gmail.com> (http://caradeuc.info)",
  "license": "MIT",
  "devDependencies": {
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.0",
    "npm-run-all": "^3.1.0"
  }
}